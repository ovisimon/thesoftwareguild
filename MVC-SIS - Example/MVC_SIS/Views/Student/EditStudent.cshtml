@model Exercises.Models.ViewModels.StudentVM
@{
    ViewBag.Title = "EditStudent";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Edit Student</h3>
        @Html.ActionLink("Return to List", "List", "Student")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.Student.StudentId)
            <div class="form-group">
                <label>First Name</label>
                @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control", placeholder = "First Name" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Student.FirstName)</span>
            </div>
            <div class="form-group">
                <label>Last Name</label>
                @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control", placeholder = "Last Name" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Student.LastName)</span>
            </div>
            <div class="form-group">
                <label>GPA</label>
                @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control", placeholder = "GPA" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Student.GPA)</span>
            </div>
            <div class="form-group">
                <label>Major</label>
                @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Student.Major.MajorId)</span>
            </div>
            <div class="form-group">
                <label>Courses</label>
                @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.SelectedCourseIds)</span>
            </div>

            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>
<br /><br />
<h3>Edit Student Address</h3>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.Student.Address.AddressId)
            <div class="form-group">
                <label>Street 1</label>
                @Html.TextBoxFor(m => m.Student.Address.Street1, new { @class = "form-control", placeholder = "Street Name" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Student.Address.Street1)</span>
            </div>
            <div class="form-group">
                <label>Street 2</label>
                @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control", placeholder = "Street Name" })
            </div>
            <div class="form-group">
                <label>City</label>
                @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control", placeholder = "City" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Student.Address.City)</span>
            </div>
            <div class="form-group">
                <label>State</label>
                @Html.DropDownListFor(m => m.Student.Address.State.StateAbbreviation, Model.StateItems, "-Choose One-", new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Student.Address.State.StateAbbreviation)</span>
            </div>
            <div class="form-group">
                <label>Postal Code</label>
                @Html.TextBoxFor(m => m.Student.Address.PostalCode, new { @class = "form-control", placeholder = "Postal Code" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Student.Address.PostalCode)</span>
            </div>

            <button type="submit" class="btn btn-sm btn-primary">Save All</button>
        }
        </div>
</div>