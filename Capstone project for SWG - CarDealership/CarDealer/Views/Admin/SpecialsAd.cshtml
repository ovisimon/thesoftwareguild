@model List<CarDealer.Models.Special>
@{
    ViewBag.Title = "Specials";
}

<h2>Specials</h2>
<div class="container">
    <div class="row form-group">
        <div class="col-lg-offset-1 col-lg-10 well">
            <div class="col-lg-4">
                <label>Title</label>
                <input type="text" class="form-control" id="SpecialTitleAdd"/>
                <label>Description</label>
                <textarea class="form-control" id="SpecialDescriptionAdd"></textarea>
                <label>Picture</label>
                <input type="text" class="form-control" id="SpecialPictureAdd"/><br />
                <button class="btn btn-primary form-control" style="width:80px" id="SpecialButtonAdd">Save</button>
               
            </div>
        </div><br />
        @foreach (var m in Model)
        {
            <div class="col-lg-12 well" style="height:200px">
                  <div class="col-lg-2">
                      <img style="width:150px;height:150px;" src="@m.ImagePath" />
                  </div>
                  <div class="col-lg-10">
                      <p>@m.Title</p>
                      <p>@m.Message</p>
                  </div>
                  <div>
                      <button class="btn btn-danger" onclick="deleteSpecial(@m.SpecialID)">Delete</button>
                  </div>
             </div>
        }
            
     </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Scripts/SpecialsAd.js"></script>
}
